<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterActivity" android:background="@color/colorPrimary">


    <EditText
            android:layout_width="0dp"
            android:layout_height="51dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordRegister"
            android:background="@drawable/round_input"
            android:hint="Password"
            app:layout_constraintEnd_toEndOf="@+id/emailRegister"
            app:layout_constraintStart_toStartOf="@+id/emailRegister" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/emailRegister"
            android:fontFamily="@font/bree_serif"
            android:textSize="22sp"
            android:textAlignment="center"
            android:textColorHint="#673AB7"
            android:lineSpacingExtra="8sp" android:textAllCaps="false" android:textStyle="bold"
            android:layout_marginTop="16dp"/>


    <Button
            android:text="Done"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonRegister" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/passwordRegister"
            app:layout_constraintEnd_toEndOf="@+id/passwordRegister"
            app:layout_constraintStart_toStartOf="@+id/passwordRegister" app:layout_constraintHorizontal_bias="0.0"
            android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"/>
    <Button
            android:text="Already have an account?"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/alreadyRegister" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonRegister" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="@+id/buttonRegister"
            app:layout_constraintStart_toStartOf="@+id/buttonRegister" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"
            android:background="@color/colorPrimary"/>
    <EditText
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/emailRegister"
            android:background="@drawable/round_input"
            android:layout_width="0dp"
            android:hint="E-mail"
            style="@android:style/Widget.AutoCompleteTextView"
            android:singleLine="false"
            android:selectAllOnFocus="false"
            android:fontFamily="@font/bree_serif"
            android:textSize="22sp"
            android:textAlignment="center"
            android:textColorHint="#673AB7"
            android:lineSpacingExtra="8sp" android:textAllCaps="false" android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/roundPhoto"/>
    <Button
            android:layout_width="133dp"
            android:layout_height="133dp"
            android:id="@+id/roundPhoto"
            android:fontFamily="@font/bree_serif"
            android:textSize="22sp"
            android:textAlignment="center"
            android:textColorHint="#673AB7"
            android:background="@drawable/rounded_photo"
            android:lineSpacingExtra="8sp" android:textAllCaps="false" android:textStyle="bold"
            android:layout_marginStart="60dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.367" android:hint="select photo"/>

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="133dp"
            android:layout_height="133dp" app:layout_constraintEnd_toEndOf="@+id/roundPhoto"
            app:layout_constraintTop_toTopOf="@+id/roundPhoto" app:layout_constraintStart_toStartOf="@+id/roundPhoto"
            app:civ_border_width="4dp"
            app:civ_border_color="#673AB7"
            app:layout_constraintBottom_toBottomOf="@+id/roundPhoto" android:id="@+id/circlePhoto"/>

</android.support.constraint.ConstraintLayout>